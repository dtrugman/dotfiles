# This script should be sourced by .bashrc, .bash_profile, .profile, etc.

set_aliases() {
    if [ -f ~/.aliases ]; then
        . ~/.aliases
    fi
}

set_prompt() {
    if [[ -n "$ZSH_VERSION" ]]; then
        export PROMPT="%F{white}%n%F{green}@%1~ >%F{yellow}>%F{red}> %f"
    elif [[ -n "$BASH_VERSION" ]]; then
        export PS1="\[\e[1;37m\]\u\[\e[m\]\[\e[1;32m\]@\[\e[m\]\[\e[1;32m\]\W\[\e[m\] \[\e[1;32m\]>\[\e[m\]\[\e[1;33m\]>\[\e[m\]\[\e[1;31m\]>\[\e[m\] "
    fi
}

set_locale() {
    export LC_ALL="C"
}

set_terminal_key_binds() {
    if [[ -z "$BASH_VERSION" ]]; then
        return 0
    fi

    # disable CTRL-S/Q (XON/XOFF)
    stty stop undef

    # Allow CTRL-Z toggeling
    stty susp undef
    bind '"\C-z":"fg\015"'
}

set_path() {
    # Nothing here yet
}

source() {
    set_aliases
    set_prompt
    set_locale
    set_terminal_key_binds
    set_path
}

# If not running interactively, don't do anything
case $- in
    *i*) ;;
    *) return;;
esac

# If executed and not sourced, don't do anything
if [[ "$0" == "$BASH_SOURCE" ]]; then
    echo "This script should be sourced, not executed"
    return
fi

source
